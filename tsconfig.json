{
  "extends": "@tsconfig/node20/tsconfig.json",

  "compilerOptions": {
    "rootDir": "./",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noEmit": true
  },

  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "package.json",
    "types.d.ts"
  ],
  "exclude": ["node_modules"],
}
