{
  "extends": "@tsconfig/node16/tsconfig.json",

  "compilerOptions": {
    "rootDir": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noEmit": true
  },

  "include": ["src/**/*.ts", "test/**/*.ts", "types.d.ts"],
  "exclude": ["node_modules"]
}
