{
  "extends": "@tsconfig/node16/tsconfig.json",

  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@package.json": ["./package.json"],
    },
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },

  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
